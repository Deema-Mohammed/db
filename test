
     DECLARE
     dayName  VARCHAR2(100); -- declare
BEGIN
   SELECT  to_char(sysdate, 'D') INTO dayName FROM dual;
  
    dbms_output.Put_line(dayName); --display
    
If  dayName='7' Then 

     dbms_output.Put_line('Hello all'); --display
     
     ElsIF  dayName ='6'Then 
          dbms_output.Put_line('Hello deema'); --display

     
     
     
     
End if;
    
    
    
    
    
END;




    
